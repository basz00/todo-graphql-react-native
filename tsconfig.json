{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/graphql/*": ["./src/core/graphql/*"],
      "@/graphql": ["./src/core/graphql"],
      "@/note/*": ["./src/features/note/*"],
      "@/core/*": ["./src/core/*"],
      "@/navigation/*": ["./src/app/navigation/*"],
      "@/test-utils/*": ["./src/test-utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
